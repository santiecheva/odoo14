<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record model="ir.ui.view" id="rut_partner_form">
        <field name='inherit_id' ref='base.view_partner_form'/>
        <field name="name">Fórmulario Contacto colombia</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">

            <xpath expr="(//field[@name='city'])[4]" position="replace"></xpath>

            <field name="city_id"
                options="{'no_open': True}"
                placeholder="City"
                attrs="{'readonly':[('change_country', '=', False)], 'invisible':[('state_id', '=', False)]}" />

            <field name="vat" position="before">
                <field name="x_pn_retri" string = "Régimen"/>
            </field>

        </field>
    </record>

</odoo>